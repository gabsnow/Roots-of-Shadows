function login(string $username, string $password) {
  $manager = new Manager();
  $user = $manager->getUser($username);
  $isValid = false;

  if($user)
    $isValid = true;

  if($isValid)
    $isValid = password_verify($password, $user["password"]);

  echo(json_encode(array("valid" => $isValid)));
}

